<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">
    <com.cyht.wykc.widget.MyTittleBar.NormalTittleBar
        android:id="@+id/tb_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_shape"
        app:layout_inflate="@layout/normal_leftback_tittle_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/edge_margin">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/register"/>
            <TextView
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:text="注册"
                android:textColor="#2fc1ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="用户名："
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_width="75dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/register_account"
                android:layout_marginLeft="5dp"
                android:hint="请输入4～12位(字母、数字)"
                android:textSize="15sp"
                android:maxLength="12"
                android:background="@null"
                android:maxLines="1"
                android:textColorHint="#e6e6e6"
                android:textColor="#333333"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
        <View
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="设置密码："
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_pass"
                    android:layout_marginLeft="5dp"
                    android:hint="请输入6～18位密码"
                    android:textSize="15sp"
                    android:maxLength="18"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="#e6e6e6"
                    android:textColor="#333333"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="确定密码："
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_pass_sure"
                    android:layout_marginLeft="5dp"
                    android:hint="请输入6～18位密码"
                    android:textSize="15sp"
                    android:maxLength="18"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="#e6e6e6"
                    android:textColor="#333333"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:padding="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="验证码："
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_identifyingCode"
                    android:layout_marginLeft="5dp"
                    android:hint="请输入验证码"
                    android:textSize="15sp"
                    android:maxLength="4"
                    android:background="@null"
                    android:maxLines="1"
                    android:textColorHint="#e6e6e6"
                    android:textColor="#333333"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/edge_margin"
            android:textColor="@color/red_error"
            android:textSize="13sp"
            android:id="@+id/register_massage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_register"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#969798"
            android:clickable="false"
            android:text="@string/register"
            android:textSize="18sp"
            android:textColor="@color/material_white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="44dp" />
        <TextView
            android:id="@+id/have_account"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#2fc1ff"
            android:text="@string/registered"
            android:autoLink="all"/>
    </LinearLayout>

</LinearLayout>
